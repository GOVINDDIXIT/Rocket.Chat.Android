<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:padding="16dp"
    >

    <ImageView
        android:id="@+id/chat_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/ic_community_black" />

    <TextView
        android:id="@+id/chat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias=".3"
        app:layout_constraintLeft_toLeftOf="@+id/chat_icon"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Chat Channel 1"
        android:textSize="20sp"
        android:textStyle="1"/>

    <TextView
        android:id="@+id/chat_data_used"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/chat_name"
        app:layout_constraintTop_toBottomOf="@+id/chat_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias=".95"
        android:text="1.1 GB" />

    <View
        android:id="@+id/divider"
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:scaleType="fitXY"
        android:background="?android:attr/dividerVertical"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/chat_data_used"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>