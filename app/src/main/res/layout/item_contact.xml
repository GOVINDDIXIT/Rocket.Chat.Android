<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="?android:attr/selectableItemBackground"
    android:paddingStart="@dimen/screen_edge_left_and_right_padding"
    android:paddingTop="@dimen/chat_item_top_and_bottom_padding"
    android:paddingEnd="@dimen/screen_edge_left_and_right_padding">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/contact_image_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/widechat_circle_shadow"
        app:roundedCornerRadius="3dp"
        fresco:actualImageScaleType="centerCrop"
        fresco:roundAsCircle="true"
        fresco:roundingBorderColor="@color/colorWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        fresco:roundingBorderPadding="2dp"
        fresco:roundingBorderWidth="2dp" />


    <TextView
        android:id="@+id/phone_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textDirection="locale"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@+id/contact_image_avatar"
        app:layout_constraintTop_toBottomOf="@+id/contact_name"
        tools:text="Phone number goes here" />


    <TextView
        android:id="@+id/contact_name"
        style="@style/ChatRoom.Name.TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:textColor="@color/colorPrimaryText"
        android:textDirection="locale"
        app:layout_constraintBottom_toBottomOf="@+id/contact_image_avatar"
        app:layout_constraintLeft_toRightOf="@+id/contact_image_avatar"
        app:layout_constraintTop_toTopOf="@+id/contact_image_avatar"
        android:fontFamily="@string/font_fontFamily_widechat"
        tools:text="Name goes here" />

    <Button
        android:id="@+id/invite_contact"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Invite"
        android:textColor="@color/color_invite"
        android:fontFamily="@string/font_fontFamily_widechat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="4dp" />
    <TextView
        android:id="@+id/text_email"
        style="@style/Sender.Name.TextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/contact_image_avatar"
        android:textColor="@color/colorPrimaryText"
        android:fontFamily="@string/font_fontFamily_widechat"
        tools:text="alex.johnson" />


    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>