<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/contacts_heading"
            android:textSize="18sp"
            android:layout_marginStart="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="@dimen/padding_mention"
            android:gravity="bottom"
            android:fontFamily="@string/font_fontFamily_widechat"
            android:paddingTop="12dp"
            android:paddingBottom="4dp"
            android:textStyle="bold"
            android:text="@string/Invite_contacts"/>

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignBottom="@+id/contacts_heading"
            android:layout_marginTop="4dp"
            android:background="?android:attr/listDivider" />

</LinearLayout>
